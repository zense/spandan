<section id="services" class="service-item">
       <div class="container">
            <div class="center wow fadeInDown">
                <h2>Sports</h2>
                <!-- <p class="lead">Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut <br> et dolore magna aliqua. Ut enim ad minim veniam</p> -->
            </div>

            <div class="row">

                <% Event.all.each do |event| %>
                <% if event.event_type == INDIVIDUAL or event.event_type == TEAM%>
                <div class="col-sm-6 col-md-4" onclick="location.href='<%= request.url %>/<%= event.name %>';" id="smallbox">
                    <div class="media services-wrap wow fadeInDown">
                        <div class="pull-left">
                            <%= image_tag event.icon , :class => "responsive"%>
                        </div>
                        <div class="media-body">
                                <% if event.description.to_s.length > 0 %>
                                <h3 id="media-onhover" class="media-heading"><%= event.name %></h3>

                                <% else %>
                                <h3 id="media-onhover" class="media-heading-alone"><%= event.name %></h3>
        
                                <% end %>
                        </div>
                    </div>
                </div>
                 <% end end %>

            </div><!--/.row-->
        </div><!--/.container-->
    </section><!--/#services-->
