<p id="notice"><%= notice %></p>

<h1>Listing Events</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Event Icon</th>
      <th>Rules</th>
      <th>Minimum team size</th>
      <th>Maximum team size</th>
      <th>Contact details</th>
      <th>Last date</th>
      <th>Event type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.name %></td>
        <td><%=raw event.description %></td>
        <td><%= image_tag event.icon %></td>
        <td><%=raw event.rules %></td>
        <td><%= event.minimum_team_size %></td>
        <td><%= event.maximum_team_size %></td>
        <td><%=raw event.contact_details %></td>
        <td><%= event.last_date %></td>
        <td><%= event.event_type %></td>
        <td><%= link_to 'Show', event %></td>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

